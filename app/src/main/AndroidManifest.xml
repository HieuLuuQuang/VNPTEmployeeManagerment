<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vnptemployeemanagement">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_vnpt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.home.SplashActivity" android:theme="@style/SplashscreenTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.home.HomeActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".views.organisations.OrganisationActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".views.profile.ProfileActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".NoticeActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".views.employees.EmployeesActivity" android:screenOrientation="portrait"></activity>

    </application>

</manifest>